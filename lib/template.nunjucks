<!DOCTYPE HTML>
<meta charset=utf-8>
<title>{{ title }} API documentation</title>

<style>
  body {
    margin: 0;
    padding: 0;
    display: flex;
    min-height: 100vh;
    flex-direction: column;
    color: #1E2829;
  }

  header {
    background: #79AD2C;
    color: white;
  }

  .container {
    display: flex;
    flex: 1;
  }

  .sidebar {
    background: #E8E8E8;
    padding: 20px;
  }

  .content {
    flex-grow: 1;
    padding: 20px;
  }

  .resources-container h3 {
    border-bottom: 1px solid black;
  }

  .resource-container {
    background: #f1f1f1;
    padding: 10px;
    margin-bottom: 20px;
  }

  .method-container {
    background: #E8E8E8;
    padding: 10px;
    margin-bottom: 20px;
  }

  table td {
    padding-right: 20px;
  }

  thead th {
    text-align: left;
    font-weight: bold;
  }
</style>

<body>
  <header>
    <h1>{{ title }} API documentation{% if version %} <small>version {{ version }}</small>{% endif %}</h1>
    <p>{{ baseUri }}</p>
  </header>

  <div class="container">
    <!--
    The left sidebar with the table of contents.
    -->
    <div class="sidebar">
      {% if documentation.length %}
        <h2>Documentation</h2>
        <ul>
          {% for chapter in documentation %}
            <li>
              <a href="#{{ chapter.uniqueId}}">
                {{ chapter.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}

      {% if resources.length %}
        <h2>Reference</h2>
        <ul>
          {% for resource in resources %}
            <li>
              <a href="#{{ resource.uniqueId}}">
                {% if resource.displayName %}
                  {{ resource.displayName}}
                {% else %}
                  {{ resource.relativeUri }}
                {% endif %}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>

    <div class="content">
      <!--
      A very simple loop over documentation chapters. Absolutely no crazy stuff going on here.
      -->
      {% if documentation.length %}
        <div class="documentation-container">
          <h2>Documentation</h2>
          {% for chapter in documentation %}
            <div class="documentation-chapter">
              <h3 id="{{ chapter.uniqueId }}">{{ chapter.title }}</h3>
{% markdown %}
{{ chapter.content }}
{% endmarkdown %}
            </div>
          {% endfor %}
        </div>
      {% endif %}

      <!--
      This shows the title of the TOP LEVEL resources, and loads a separate resource template
      which shows the actual list of resources, their methods, and their nested resources
      (loaded recursively).
      -->
      {% if resources.length %}
        <div class="resources-container">
          <h2>Reference</h2>
          {% for resource in resources %}
            <div>
              <h3 id="{{ resource.uniqueId }}">
                {% if resource.displayName %}
                  {{ resource.displayName}}
                {% else %}
                  {{ resource.relativeUri }}
                {% endif %}
              </h3>

              {% include "./resource.nunjucks" %}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</body>
